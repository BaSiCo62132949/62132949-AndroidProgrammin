<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bai Thi Giữa Kỳ "
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnCau1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Câu 1: Tính Tổng"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnCau2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Câu 2: ListView"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnCau3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Câu 3: RecylerView Object"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnCau4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Câu 4: Thông tin cá nhân"
        android:layout_marginBottom="16dp"/>




</LinearLayout>