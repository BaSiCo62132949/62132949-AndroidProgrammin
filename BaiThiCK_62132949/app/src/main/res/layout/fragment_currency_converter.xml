<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".CurrencyConverterFragment">

    <!-- Thanh tiêu đề (Toolbar hoặc TextView đơn giản) -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Converter Neo"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewLastUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="17:24 22/03/2024"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        app:layout_constraintStart_toStartOf="@+id/textViewTitle" />

    <ImageButton
        android:id="@+id/buttonRefreshRatesTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bank"
        app:tint="@android:color/white"
        app:layout_constraintTop_toTopOf="@+id/textViewTitle"
        app:layout_constraintBottom_toBottomOf="@+id/textViewLastUpdate"
        app:layout_constraintEnd_toStartOf="@+id/buttonSaveHistoryTop"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"/>
    <!-- Bạn có thể thêm các icon khác ở đây -->

    <ImageButton
        android:id="@+id/buttonSaveHistoryTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/save"
        app:tint="@android:color/white"
        app:layout_constraintTop_toTopOf="@+id/textViewTitle"
        app:layout_constraintBottom_toBottomOf="@+id/textViewLastUpdate"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Lưu lịch sử" />


    <!-- RecyclerView để hiển thị danh sách tiền tệ -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCurrencies"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewLastUpdate"
        app:layout_constraintBottom_toTopOf="@+id/customKeyboardLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"/>

    <!-- Layout cho bàn phím tùy chỉnh (sẽ định nghĩa sau) -->
    <LinearLayout
        android:id="@+id/customKeyboardLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#56407D"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <!-- Các hàng nút sẽ được thêm vào đây -->
        <!-- Hàng 1: C, <-, %, / -->
        <LinearLayout style="@style/KeyboardRow">

            <Button
                android:id="@+id/buttonKeyClear"
                style="@style/KeyboardButton.Gray"
                android:text="C" />

            <Button
                android:id="@+id/buttonKeyBackspace"
                style="@style/KeyboardButton.Gray"
                android:text="←" />

            <Button
                android:id="@+id/buttonKeyPercent"
                style="@style/KeyboardButton.Gray"
                android:text="%" />

            <Button
                android:id="@+id/buttonKeyDivide"
                style="@style/KeyboardButton.Orange"
                android:text="÷" />
        </LinearLayout>
        <!-- Hàng 2: 7, 8, 9, X -->
        <LinearLayout style="@style/KeyboardRow">

            <Button
                android:id="@+id/buttonKey7"
                style="@style/KeyboardButton.DarkGray"
                android:text="7" />

            <Button
                android:id="@+id/buttonKey8"
                style="@style/KeyboardButton.DarkGray"
                android:text="8" />

            <Button
                android:id="@+id/buttonKey9"
                style="@style/KeyboardButton.DarkGray"
                android:text="9" />

            <Button
                android:id="@+id/buttonKeyMultiply"
                style="@style/KeyboardButton.Orange"
                android:text="×" />
        </LinearLayout>
        <!-- Hàng 3: 4, 5, 6, - -->
        <LinearLayout style="@style/KeyboardRow">

            <Button
                android:id="@+id/buttonKey4"
                style="@style/KeyboardButton.DarkGray"
                android:text="4" />

            <Button
                android:id="@+id/buttonKey5"
                style="@style/KeyboardButton.DarkGray"
                android:text="5" />

            <Button
                android:id="@+id/buttonKey6"
                style="@style/KeyboardButton.DarkGray"
                android:text="6" />

            <Button
                android:id="@+id/buttonKeySubtract"
                style="@style/KeyboardButton.Orange"
                android:text="−" />
        </LinearLayout>
        <!-- Hàng 4: 1, 2, 3, + -->
        <LinearLayout style="@style/KeyboardRow">

            <Button
                android:id="@+id/buttonKey1"
                style="@style/KeyboardButton.DarkGray"
                android:text="1" />

            <Button
                android:id="@+id/buttonKey2"
                style="@style/KeyboardButton.DarkGray"
                android:text="2" />

            <Button
                android:id="@+id/buttonKey3"
                style="@style/KeyboardButton.DarkGray"
                android:text="3" />

            <Button
                android:id="@+id/buttonKeyAdd"
                style="@style/KeyboardButton.Orange"
                android:text="+" />
        </LinearLayout>
        <!-- Hàng 5: 0, ,, = -->
        <LinearLayout style="@style/KeyboardRow">

            <Button
                android:id="@+id/buttonKey0"
                style="@style/KeyboardButton.DarkGray.DoubleWidth"
                android:text="0" />

            <Button
                android:id="@+id/buttonKeyDecimal"
                style="@style/KeyboardButton.DarkGray"
                android:text="," />

            <Button
                android:id="@+id/buttonKeyEquals"
                style="@style/KeyboardButton.Orange"
                android:text="=" />
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarLoading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/recyclerViewCurrencies"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerViewCurrencies"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewErrorMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_light"
        android:textAlignment="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/recyclerViewCurrencies"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerViewCurrencies"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        tools:text="Lỗi tải dữ liệu"/>

</androidx.constraintlayout.widget.ConstraintLayout>